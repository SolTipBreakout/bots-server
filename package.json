{
  "name": "soltip",
  "version": "1.0.0",
  "description": "Cross-platform Solana tipping bot for Twitter, Telegram, and Discord",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "dev:telegram": "ts-node-dev --respawn src/bots/telegram-dev.ts",
    "dev:twitter": "ts-node-dev --respawn src/bots/twitter-dev.ts",
    "dev:discord": "ts-node-dev --respawn src/bots/discord-dev.ts",
    "dev:mcp": "ts-node-dev --respawn src/server.ts",
    "lint": "eslint src/**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "solana",
    "tip",
    "bot",
    "telegram",
    "twitter",
    "discord",
    "cryptocurrency"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.17",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.1",
    "@privy-io/server-auth": "^1.22.0",
    "@solana-agent-kit/adapter-mcp": "^2.0.4",
    "@solana-agent-kit/plugin-token": "^2.0.4",
    "@solana/kit": "^2.1.0",
    "@solana/web3.js": "^1.98.2",
    "agent-twitter-client": "^0.0.18",
    "axios": "^1.9.0",
    "bs58": "^6.0.0",
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "solana-agent-kit": "^2.0.4",
    "telegraf": "^4.16.3",
    "twitter-api-v2": "^1.23.0",
    "zod": "^3.24.4"
  }
}
